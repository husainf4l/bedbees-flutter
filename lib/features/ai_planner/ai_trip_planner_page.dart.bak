  Color _getBudgetColor() {
    if (_budgetValue < 2000) return BedbeesColors.successGreen;
    if (_budgetValue < 5000) return BedbeesColors.primaryBlue;
    return BedbeesColors.sunshineYellow;
  }

  String _getBudgetLabel() {
